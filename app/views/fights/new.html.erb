<section class="nes-container with-title align-center fight">
  <h3 class="title">Waiting for fighters!...</h3>
  <h2>Choose your fighters!</h2>

  <div class="flex-container center top fight__versus">
    <%= render partial: "fighter", locals: { fight: @fight, fighter: @fighter1, action: :remove_fighter } %>
    <div class="vs">
      VS
    </div>
    <%= render partial: "fighter", locals: { fight: @fight, fighter: @fighter2, action: :remove_fighter } %>
  </div>

  <div>
    <% if @selected_fighters.size > 0 %>
      <%= link_to "Cancel", fight_path(@fight), method: "delete", class: "nes-btn" %>
    <% end %>
    <% if @selected_fighters.size == 2 && !@fight.fighters.include?(nil) %>
      <%= link_to "Start", fight_path(@fight, start: "true"), method: "patch", class: "nes-btn is-error" %>
    <% end %>
  </div>
</section>

<%= render partial: "fighters", locals: { fight: @fight, fighters: @fighters } %>

<%= render partial: "latest_fights_results", locals: { fights: @latest_fights } %>
